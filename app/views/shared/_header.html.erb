<header class='top-page-header'>
  <div class='nav'>
    <ul class='lists-left'>
      <%= link_to image_tag("logo-white.png", class:"goal-log-icon"), "/" %>
    </ul>
    <ul class="ddmenu">
      <% if user_signed_in? %>
        <li>
          <%= link_to root_path do %>
            <i class="far fa-comments"></i> タイムライン
          <% end %>
        </li>
        <li>
          <%= link_to todo_task_path(:id) do %>
            <i class="fas fa-tasks"></i> タスク管理
          <% end %>
        </li>
        <li>
          <a href="/users/<%= current_user.id %>">
            <i class="far fa-address-card"></i> マイページ ▾
          </a>
          <ul>
              <li>
                <a href="/users/<%= current_user.id %>/edit">
                  <i class="fas fa-user-edit"></i> プロフィール編集
                </a> 
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </li>
          </ul>
        </li>
      <% else %>
        <li>
          <%= link_to "#" do %>
            <i class="far fa-comments"></i> みんなの活動報告
          <% end %>
        </li> 
        <li>
          <%= link_to new_user_session_path, class: "dd-login" do %>
            <i class="fas fa-sign-in-alt"></i> ログイン
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path do %>
            <i class="far fa-address-card"></i> 新規登録
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</header>